page {
  font-family: 'Helvetica Neue',
                 Helvetica,
                 Arial,
                 'Microsoft Yahei',
                 'Hiragino Sans GB',
                 'Heiti SC',
                 'WenQuanYi Micro Hei',
                 sans-serif;
  font-size: 24rpx;
}

/*布局  */

.flex {
  display: flex;
  align-items: center;
  justify-content: center;
}

.flex >view {
  box-sizing: border-box;
}

